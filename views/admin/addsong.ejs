<%- include("../partials/header.ejs") %>

<script src="/scripts/home.js" defer></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
<link rel="stylesheet" href="/stylesheets/addsong.css">

<div class="wrapper">
    <input type="checkbox" id="check">
    <!--header menu start-->
    <div class="header">
        <div class="header-menu">
            <div class="title"><a href="/" id="ans">ANS</a></div>
            <div class="sidebar-btn">
                <label for="check">
                    <i class="fas fa-bars"></i>
                </label>
            </div>
            <ul>
                <% if(!currentUser){ %>
                    <li title="Sign up"><a href="/signup"><i class="fas fa-user-plus"></i></a></li>
                    <li title="Log in"><a href="/login"><i class="fas fa-sign-in-alt"></i></a></li>
                <% } else { %>
                    <li title="Logout"><a href="/logout"><i class="fas fa-power-off"></i></a></li>
                <% } %>
            </ul>
        </div>
    </div>
    <!--header menu end-->
    
    <!--mobile navigation bar start-->
    <div class="mobile_nav">
        <div class="nav_bar">
            <% if(!currentUser){ %>
            <% } else { %>
                <img src="<%= currentUser.profileimage %>" class="mobile_profile_image" alt="" onerror="this.style.display='none'">
            <% } %>
            <i class="fa fa-bars nav_btn" onclick="toggleMobile();"></i>
        </div>
        <div class="mobile_nav_items">
            <a href="/home"><i class="fas fa-home"></i><span>Home</span></a>
            <a href="/favorite"><i class="fas fa-star"></i><span>Favorite</span></a>
            <a href="/profile"><i class="fas fa-user-circle"></i><span>Profile</span></a>
            <a href=""><i class="fas fa-plus"></i><span>Add song</span></a>
            <a href="/usermanagement"><i class="fas fa-user-cog"></i><span>User management</span></a>
        </div>
    </div>
    <!--mobile navigation bar end-->

    <!--sidebar start-->
    <div class="sidebar">
        <div class="profile_info">
            <% if(!currentUser){ %>
            <% } else { %>
                <img src="<%= currentUser.profileimage %>" class="profile_image" alt="" onerror="this.style.display='none'">
                <h4><%= currentUser.profilename %></h4>
            <% } %>
        </div>
        <div class="sidetext">
            <a href="/home"><i class="fas fa-home"></i><span>Home</span></a>
            <a href="/favorite"><i class="fas fa-star"></i><span>Favorite</span></a>
            <a href="/profile"><i class="fas fa-user-circle"></i><span>Profile</span></a>
            <a href="" class="active"><i class="fas fa-plus"></i><span>Add song</span></a>
            <a href="/usermanagement"><i class="fas fa-user-cog"></i><span>User management</span></a>
        </div>
    </div>
    <!--sidebar end-->

    <div class="content">
        <p class="topic">Add new song</p>
        <hr>
        <div class="contentbox">
            <div class="formbox">
                <form action="/addsong" method="POST" enctype="multipart/form-data">
                    <div class="inputbox">
                        <p>Enter song title</p>
                        <input type="text" name="song[name]" placeholder="Enter song title" autocomplete="off" required>
                    </div>
                    <div class="inputbox">
                        <p>Enter lyrics</p>
                        <input type="text" name="song[lyrics]" placeholder="Enter lyrics" autocomplete="off" required>
                    </div>
                    <div class="inputbox">
                        <p>Enter artist</p>
                        <input type="text" name="song[artist]" placeholder="Enter artist" autocomplete="off" required>
                    </div>
                    <div class="inputbox">
                        <p>Enter album</p>
                        <input type="text" name="song[album]" placeholder="Enter album" autocomplete="off" required>
                    </div>
                    <div class="inputbox">
                        <p>Enter genre</p>
                        <select name="song[genre]" required>
                            <option value="" selected disabled hidden>Select song genre</option>
                            <option value="Classic">Classic</option>
                            <option value="Hip Hop">Hip Hop</option>
                            <option value="Jazz">Jazz</option>
                            <option value="Pop">Pop</option>
                            <option value="Rock">Rock</option>
                            <option value="Rock">R&B</option>
                        </select>
                    </div>
                    <div class="inputbox">
                        <p>Enter song file</p>
                        <input type="file" name="song[file]" accept="audio/*" autocomplete="off" required>
                    </div>
                    <div class="inputbox" id="input_img">
                        <p>Enter cover image</p>
                        <input type="file" id="inpFile" name="song[cover]" accept="image/*" autocomplete="off" required>
                        <div class="image-preview" id="imagePreview">
                            <img src="" alt="Image Preview" class="image-preview__image">
                        </div>
                    </div>
                    <div class="inputbox">
                        <input type="submit" value="ADD NEW SONG">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer.ejs") %>